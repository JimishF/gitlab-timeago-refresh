{
  "manifest_version": 3,
  "name": "GitLab Time Updater",
  "version": "1.1",
  "description": "Updates the time-ago timestamps on any GitLab instance.",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*gitlab*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}